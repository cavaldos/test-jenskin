pipeline {
    agent any

    stages {
        stage('SSH and Run Commands') {
            steps {
                // Ensure 'manjaro' matches the credential ID configured in Jenkins
                sshagent(['manjaro']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -p 22 ubuntu@13.236.167.38 'chmod +x ~/deploy.sh && ~/deploy.sh'
                    """
                }
            }
        }
    }
}
